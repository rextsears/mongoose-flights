<!DOCTYPE html>
<html>
  <head>
    <title>Flight Details</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Flight Details</h1>
    <p>
      Airline: <%= flight.airline %><br>
      Airport: <%= flight.airport %><br>
      Flight No.: <%= flight.flightNo %><br>
      Departs: <%= flight.departs.toLocaleString() %>
    </p>
    <h2>Destinations</h2>
    <ul>
      <% flight.destinations.forEach(destination => { %>
        <li>
          Airport: <%= destination.airport %><br>
          Arrival: <%= destination.arrival.toLocaleString() %>
        </li>
      <% }) %>
    </ul>
    <h2>Add Destination</h2>
    <form action="/flights/<%= flight._id %>/destinations" method="post">
      <label for="airport">Airport:</label>
      <select id="airport" name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select><br>
      <label for="arrival">Arrival Date/Time:</label>
      <input type="datetime-local" id="arrival" name="arrival" required><br>
      <button type="submit">Add Destination</button>
    </form>
    <h2>Tickets</h2>
    <ul>
      <% tickets.forEach(ticket => { %>
        <li>
          Seat: <%= ticket.seat %><br>
          Price: <%= ticket.price %>
        </li>
      <% }) %>
    </ul>
    <a href="/flights">Back to Flights</a>
  </body>
</html>